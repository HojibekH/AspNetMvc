 




@model List<Yangilik>
@{
    ViewData["Title"] = "Yangiliklar ro'yhati";
}
<div style="display: grid;">
    <a style="float:left; margin:25px;" class="btn btn-primary" href="/home/CreatePage">Yangi Yangilik yaratish</a>

    
        @foreach (Yangilik yangilik in Model)
        {
            <div class="alert alert-primary" style="height: 90px; margin:15px" role="alert">
                <div>
                    @yangilik.Id) @yangilik.Title
                    @yangilik.Description) @yangilik.Description
                    @yangilik.ImageUrl) @yangilik.ImageUrl
                </div>
                <div style="float:right">
                      
                    <a class="btn btn-danger" href="/home/delete/@yangilik.Id">Delete</a>
                    <a class="btn btn-success" href="/home/edit/@yangilik.Id">Edit</a>
                </div>
            </div>
        }
    
</div>





<a class="btn btn-primary" href="/home/CreatePage">Create page sahifasiga o'tish</a>

 